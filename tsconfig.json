{
  "compilerOptions": {
    "baseUrl": "./src",
    "declaration": true,
    "declarationDir": "lib",
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "target": "es2019",
    "module": "esnext",
    "rootDirs": ["src", "stories"],
    "outDir": "./lib",
    "sourceMap": true,
    "checkJs": false,
    "allowJs": true,
    "removeComments": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "allowSyntheticDefaultImports": true,
    "plugins": [
      {
        "transform": "@zerollup/ts-transform-paths",
        "exclude": ["*"]
      }
    ]
  },
  "include": ["src", "./declaration.d.ts", "stories"],
  "exclude": ["node_modules", "lib"]
}
