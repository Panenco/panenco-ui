{
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "declarationDir": "lib",
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "target": "es2019",
    "module": "esnext",
    "rootDir": "./src",
    "outDir": "./lib",
    "sourceMap": true,
    "checkJs": false,
    "allowJs": true,
    "removeComments": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "paths": {
      "*": ["node_modules/*", "src/*"]
    }
  },
  "include": ["src", "./declaration.d.ts"],
  "exclude": ["node_modules", "lib"]
}
